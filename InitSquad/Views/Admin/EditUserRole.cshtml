@using ClanWeb.Web.Models
@model ChangeRoleViewModel

@{
    ViewBag.Title = "Edit User Role";
    Layout = "~/Views/Admin/_layout.cshtml";
}

<h2>Edit User Role</h2>
<hr />
@using (Html.BeginForm("EditUserRole", "Admin",new { userId = ViewBag.UserId }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(Model => Model.PrimaryRole, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.DropDownListFor(Model => Model.PrimaryRole, (IEnumerable<SelectListItem>)ViewBag.PrimaryRolesSelectList, null, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <h3>Modules</h3>
    <hr />
    <div class="form-group">
        <div class="col-md-offset-1 col-md-6">
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="col-md-6">
                    @Html.HiddenFor(Model => Model.Roles[i].Name)
                    <label>
                        @Html.CheckBoxFor(Model => Model.Roles[i].Checked) @Model.Roles[i].Name
                    </label>
                </div>
            }
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-5 col-md-4">
            <input id="submit" type="submit" class="btn btn-default" onclick="disableAfterClick();" />
        </div>
    </div>
}
