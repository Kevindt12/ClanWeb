@using ClanWeb.Web.Models;
@model  IEnumerable<EventListingViewModel>

<h2>Events</h2>
<br />
<div class="event-section">
    @foreach (EventListingViewModel eventItem in Model)
    {
        <div class="event-bound @if (eventItem == Model.First()) {@Html.Raw("event-bound-first") } ">
            @Html.Hidden("eventid", eventItem.Id, new { id = "eventid" })
            <a href="#" class="eventlisting">@eventItem.EventDate.ToShortDateString() - @eventItem.EventName</a>
        </div>
    }
</div>

@*The Modal popup*@
<div class="modal fade modal-black" tabindex="-1" role="dialog" id="eventmodal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="eventTitle" class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">
                <div class="row image">
                    <div class="col-md-12">
                        <img id="eventImage" src="" class="img-responsive center-block" />
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-5">
                        Event: <span id="eventName"></span>
                    </div>
                    <div class="col-md-3">
                        Game: <span id="gameName"></span>
                    </div>
                    <div class="col-md-4">
                        Date: <span id="eventDateTime"></span>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-12">
                        Description:
                        <br />
                        <p id="description">

                        </p>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        Location: <span id="locationName"></span>
                    </div>
                    <div class="col-md-4 col-md-offset-4">
                        By: <span id="createdBy"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->