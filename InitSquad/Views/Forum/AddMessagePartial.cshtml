@using ClanWeb.Web.Models
@model AddMessageViewModel

<br />
@using (Html.BeginForm("AddMessagePost", "Forum", new { threadId = Model.ThreadId, groupId = Model.GroupId }))
{
    <div class="form-group-lg">
        <h3 style="left:17px;position:relative;padding-bottom:20px;">Reply: </h3>
        <div class="col-md-12">
            @Html.EditorFor(Model => Model.Body)
            @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="float-right">
            <input id="submit" type="submit" value="Submit Message" class="btn btn-default messagepostbutton" />
        </div>
    </div>     
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}












