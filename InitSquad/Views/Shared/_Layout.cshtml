<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Init Squad</title>
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/site.css")
    @Styles.Render("~/Content/sprite/famfamfam-flags.css")
    @Styles.Render("~/Content/fontAwsome")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/popper")

    @Scripts.Render("~/bundles/javascript")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    <script src="@Url.Content("~/Scripts/tinymce/jquery.tinymce.min.js")" type="text/javascript"></script>
</head>
<body class="body-background-color textcolor">
    <div class="banner">
        <img class="img-fluid" src="~/Content/Images/Lore-Banner.jpg" width="1920" height="180" />
    </div>
    <nav class="navbar navbar-expand-lg sticky-top navbar-light bg-light">
        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Members", "Members", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Forum", "Index", "Forum", null, new { @class = "nav-link" })
                </li>
            </ul>
            @if (!User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav navbar-login">
                    <li class="nav-item pull-right">
                        @Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item pull-right">
                        @Html.ActionLink("Register", "Register", "Account", null, new { @class = "nav-link" })
                    </li>
                </ul>
            }
            else
            {
                <ul class="navbar-nav navbar-login">
                    <li class="nav-item pull-right navbar-profile-picturemenu navbar-login">
                        <text style="padding-right:14px;">@User.Identity.Name</text>
                        <div class="btn-group">
                            <img src="https://www.ienglishstatus.com/wp-content/uploads/2018/04/Anonymous-Whatsapp-profile-picture.jpg" height="50" width="50" />
                            <button type="button" class="btn btn-lg btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <div class="dropdown-menu">
                                @Html.ActionLink("Profile", "Index", "Manage", null, new { @class = "dropdown-item" })

                                <a class="dropdown-item" href="#">Subscriptions</a>
                                @if (User.IsInRole("Administrators") || User.IsInRole("Moderators"))
                                {
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Discord Controls</a>
                                    @Html.ActionLink("Admin Controls", "Index", "Admin", null, new { @class = "dropdown-item" })
                                }
                                <div class="dropdown-divider"></div>
                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <a class="dropdown-item" onclick="document.getElementById('logoutForm').submit()">Log Off</a>
                                }
                            </div>
                        </div>
                    </li>
                </ul>
            }
        </div>
    </nav>

    @RenderBody()

    @RenderSection("scripts", required: false)

    <footer class="container">
        <hr />
        <p>&copy; @DateTime.Now.Year - INIT Squad</p>
    </footer>
</body>
</html>
